<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Calculations date -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp">

        <!-- Date -->
        <TextView
            android:id="@+id/list__date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ListDateTextStyle"/>

        <!-- Time -->
        <TextView
            android:id="@+id/list__time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/ListTimeTextStyle"/>

    </LinearLayout>

    <!-- Calculations -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp">

        <!-- Expression -->
        <TextView
            android:id="@+id/list__expression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ListExpressionTextStyle"/>

        <!-- Result -->
        <TextView
            android:id="@+id/list__result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ListResultTextStyle"/>


    </LinearLayout>

</RelativeLayout>